{
    "name": "dotnet-test-rerun devcontainer",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "containerEnv": {
        "DOTNET_CLI_TELEMETRY_OPTOUT": "1"
    },
    "features": {
        "ghcr.io/devcontainers/features/dotnet": {
            "version": "9.0",
            "additionalVersions": ["8.0"]
        },
        "ghcr.io/devcontainers/features/github-cli": {},
        "ghcr.io/devcontainers/features/docker-in-docker": {},
        "ghcr.io/nils-geistmann/devcontainers-features/zsh": {
            "theme": "agnoster",
            "plugins": "git docker dotnet"
        },
        "ghcr.io/stuartleeks/dev-container-features/shell-history": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "formulahendry.docker-explorer",
                "ms-azuretools.vscode-docker",
                "ms-dotnettools.csdevkit",
                "FullStackSpider.visual-nuget",
                "actboy168.tasks",
                "esbenp.prettier-vscode",
                "github.vscode-github-actions",
                "GitHub.copilot"
            ]
        }
    },
    "postCreateCommand": "dotnet tool restore && dotnet build && echo \"alias 'test-rerun=/workspaces/dotnet-test-rerun/src/bin/Debug/net9.0/test-rerun'\" >> /home/$USER/.bashrc"
}